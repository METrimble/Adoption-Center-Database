<!DOCTYPE html>
<html>
    <head>
        <title>Employees</title>
    </head>
    <body>
        <div class="homepage-link">
            <A HREF="homepage.html">Homepage</A>
            <br>
        </div>

        <h1>Employees</h1>
        <div class="employees-table">
            <table>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Type</th>
                    <th>Pay_Rate</th>
                    <th>SSN</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hours_Worked</th>
                    <th>Hiring_Date</th>
                </tr>
                <tbody>
                    {{#each employee}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{type}}</td>
                        <td>{{pay_rate}}</td>
                        <td>{{SSN}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>{{hours_worked}}</td>
                        <td>{{hiring_date}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <br>

        <div class="employee-animal-table">
            <table>
                <tr>
                    <th>Employee_ID</th>
                    <th>Animal_ID</th>
                </tr>
                <tbody>
                    {{#each employee_animal}}
                    <tr>
                        <td>{{employee_id}}</td>
                        <td>{{animal_id}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <br>

        <div class="employee-location-table">
            <table>
                <tr>
                    <th>Employee_ID</th>
                    <th>Location_ID</th>
                </tr>
                <tbody>
                    {{#each employee_location}}
                    <tr>
                        <td>{{employee_id}}</td>
                        <td>{{location_id}}</td>
                    </tr>
                    {{each}}
                </tbody>
            </table>
        </div>

        <div class="insert">
            <h3>Add an Employee</h3>
            <!-- https://www.w3schools.com/tags/tag_input.asp -->
            <form id="add_employee" action="/employee" method="post">
                First Name: <input type="text" name="first_name">
                <br>
                Last Name: <input type="text" name="last_name">
                <br>
                Type:
                <input type="radio" name="type" value="Volunteer"> Volunteer
                <input type="radio" name="type" value="Part-Time"> Part-Time
                <input type="radio" name="type" value="Full-Time"> Full-Time
                <input type="radio" name="type" value="Salaried"> Salaried
                <br>
                Pay Rate: <input type="number" name="pay_rate">
                <br>
                SSN: <input type="number" name="SSN">
                <br>
                Email: <input type="email" name="email">
                <br>
                Phone #: <input type="tel" name="phone">
                <br>
                Hours Worked: <input type="number" name="hours_worked">
                <br>
                Hiring Date: <input type="date" name="hiring_date">
                <br>
                <input type="submit" id="submit" name="submit">
            </form>
        </div>

        <div class="insert">
            <h3>Associate Employees With Animals</h3>
            <form id="addemployee_animal" action="/employee_animal" method="post">
            Employee: <select name='employee_id'>
                {{#each employee}}
                    <option value='{{employee_id}}'>{{first_name}} {{second_name}}</option>
                {{/each}}
            </select>
            <br>
            Animal: <sup>Multi-select</sup> <select multiple name="animal">
                {{#each animal}}
                <option value="{{animal_id}}">{{animal_name}} {{birthdate}}</option>
                {{/each}}
            </select>
            <br>
            <input type="submit" value="Submit">
            </form>
        </div>

        <div class="insert">
            <h3>Associate Employees With Locations</h3>
            <form id="addemployee_location" action="/employee_location" method="post">
            Employee: <select name='employee_id'>
                {{#each employee}}
                    <option value='{{employee_id}}'>{{first_name}} {{second_name}}</option>
                {{/each}}
            </select>
            <br>
            Location: <sup>Multi-select</sup> <select multiple name="location">
                {{#each location}}
                <option value="{{location_id}}">{{address}} {{city}} {{zip_code}}</option>
                {{/each}}
            </select>
            <br>
            <input type="submit" value="Submit">
            </form>
        </div>

        <!-- next week! -->
        <div class="update">
            <h3>Update Employee Information</h3>
            <form action="/action_page.php">
                <label for="Employee_ID">Enter the ID of the employee you'd like to update: </label>
                <input type="number" id="Employee_ID" name="Employee_ID">
                <br>
                <label for="First Name">First Name: </label>
                <input type="text" id="First_Name" name="First_Name">
                <br>
                <label for="Last Name">Last Name: </label>
                <input type="text" id="Last_Name" name="Last_Name">
                <br>
                <label for="Type">Type: </label>
                <input type="radio" name="Type" value="Volunteer"> Volunteer
                <input type="radio" name="Type" value="Part-Time"> Part-Time
                <input type="radio" name="Type" value="Full-Time"> Full-Time
                <input type="radio" name="Type" value="Salaried"> Salaried
                <br>
                <label for="Pay_Rate">Pay Rate: </label>
                <input type="number" id="Pay_Rate" name="Pay_Rate">
                <br>
                <label for="SSN">SSN: </label>
                <input type="number" id="Pay_Rate" name="Pay_Rate">
                <br>
                <label for="Email">Email: </label>
                <input type="email" id="Email" name="Email">
                <br>
                <label for="Phone">Phone #: </label>
                <input type="tel" id="Phone" name="Phone">
                <br>
                <label for="Hours_Worked">Hours Worked: </label>
                <input type="number" id="Hours_Worked" name="Hours_Worked">
                <br>
                <label for="Hiring_Date">Hiring Date: </label>
                <input type="date" id="Hiring_Date" name="Hiring_Date">
                <br>
                <input type="submit" id="submit" name="submit">
            </form>
        </div>
    </body>
</html>